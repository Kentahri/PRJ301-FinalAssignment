<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createController</servlet-name>
        <servlet-class>controller.website.createController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>acceptedController</servlet-name>
        <servlet-class>controller.website.acceptedController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>historyController</servlet-name>
        <servlet-class>controller.website.historyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>agendaController</servlet-name>
        <servlet-class>controller.website.agendaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>myrequestController</servlet-name>
        <servlet-class>controller.website.myrequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateRequestController</servlet-name>
        <servlet-class>controller.website.updateRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePageController</servlet-name>
        <servlet-class>controller.website.HomepageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createController</servlet-name>
        <url-pattern>/website/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>acceptedController</servlet-name>
        <url-pattern>/website/accepted</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agendaController</servlet-name>
        <url-pattern>/website/agenda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>myrequestController</servlet-name>
        <url-pattern>/website/myrequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePageController</servlet-name>
        <url-pattern>/website/homepage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
